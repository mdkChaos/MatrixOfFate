<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MatrixOfFate.Resources.Styles">
    <Style x:Key="Label">
        <Setter Property="Label.HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Label.VerticalContentAlignment" Value="Center"/>
        <Setter Property="Label.FontWeight" Value="Bold"/>
        <Setter Property="Label.FontSize" Value="20"/>
        <!--<Setter Property="Label.FontFamily" Value="Arial"/>-->
    </Style>
    <Style x:Key="WhiteText" BasedOn="{StaticResource Label}">
        <Setter Property="Label.Foreground" Value="White"/>
    </Style>
    <Style x:Key="BlackText" BasedOn="{StaticResource Label}">
        <Setter Property="Label.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="BordoText" BasedOn="{StaticResource Label}">
        <Setter Property="Label.Foreground" Value="#b00000"/>
    </Style>
    <Style x:Key="GoldText" BasedOn="{StaticResource Label}">
        <Setter Property="Label.Foreground" Value="DarkGoldenrod"/>
    </Style>
</ResourceDictionary>