<Window x:Class="MatrixOfFate.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatrixOfFate.Views"
        mc:Ignorable="d"
        Title="About"
        Height="230" Width="400"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Icon="/MatrixOfFate;component/Resources/Icon/Icon.png"
        Background="LightGray">
    <Border Margin="10" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="10" Background="White">
        <Grid>
            <StackPanel>
                <Label Content="Program name: Matrix of Fate" FontWeight="Bold"/>
                <Label Content="Program version: 1.0.0" FontWeight="Bold"/>
                <Label Content="Autor: Andrii Poludniev" FontWeight="Bold"/>
                <Label Content="E-mail: mdkchaos1@gmail.com" FontWeight="Bold"/>
                <Label/>
                <Label Content="© 2020 Andrii Poludniev. All rights reserved." FontWeight="Bold" HorizontalAlignment="Center"/>
                <Button Content="OK" FontWeight="Bold" HorizontalAlignment="Center" Width="100" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
